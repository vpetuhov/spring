<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="wheel" class="XMLConfig.Wheel" />
    <bean id="starter" class="XMLConfig.Starter" />
    <bean id="sparkPlug" class="XMLConfig.SparkPlug" />
    <bean id="engine" class="XMLConfig.Engine">
        <constructor-arg ref="starter" />
        <constructor-arg ref="sparkPlug" />
    </bean>
    <bean id="accumulator" class="XMLConfig.Accumulator" />
    <bean id="hinge" class="XMLConfig.Hinge" />
    <bean id="differential" class="XMLConfig.Differential" />
    <bean id="suspension" class="XMLConfig.Suspension">
        <constructor-arg ref="hinge" />
        <constructor-arg ref="differential" />
    </bean>
    <bean id="car" class="XMLConfig.Car">
        <constructor-arg ref="wheel" />
        <constructor-arg ref="engine" />
        <constructor-arg ref="accumulator" />
        <constructor-arg ref="suspension" />
    </bean>
</beans>